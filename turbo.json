{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT", ".env*"],
      "outputs": [
        "dist/**", // hono
				".astro/**" // Astro
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db-generate-migrate": {
      "cache": false,
      "persistent": false
    }
  }
}
